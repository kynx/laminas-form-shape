{
  "name": "kynx/laminas-form-shape",
  "description": "Generate Psalm types for Laminas forms",
  "type": "library",
  "license": "BSD-3-Clause",
  "keywords": [
    "laminas",
    "form",
    "psalm",
    "dev"
  ],
  "authors": [
    {
      "name": "Matt Kynaston",
      "email": "matt@kynx.org"
    }
  ],
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "extra": {
    "laminas": {
      "config-provider": "Kynx\\Laminas\\FormShape\\ConfigProvider"
    }
  },
  "require": {
    "php": "~8.2 || ~8.3",
    "composer-runtime-api": "^2.2",
    "laminas/laminas-cli": "^1.10",
    "laminas/laminas-form": "^3.19",
    "nette/php-generator": "^4.1"
  },
  "require-dev": {
    "cuyz/valinor": "^1.8",
    "laminas/laminas-coding-standard": "^3.0",
    "laminas/laminas-i18n": "^2.26",
    "laminas/laminas-servicemanager": "^4.0",
    "laminas/laminas-uri": "^2.11",
    "phpunit/phpunit": "^10.5",
    "psalm/plugin-phpunit": "^0.19.0",
    "psr/http-client": "^1.0",
    "psr/http-factory": "^1.0",
    "roave/security-advisories": "dev-master",
    "squizlabs/php_codesniffer": "^3.8",
    "vimeo/psalm": "^5.20"
  },
  "autoload": {
    "psr-4": {
      "Kynx\\Laminas\\FormShape\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "KynxTest\\Laminas\\FormShape\\": "test/"
    }
  },
  "scripts": {
    "check": [
      "@cs-check",
      "@static-analysis",
      "@test"
    ],
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "static-analysis": "psalm --shepherd --stats",
    "test": "phpunit --colors=always",
    "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
  }
}
